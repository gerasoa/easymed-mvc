@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-4">
    <h1 class="text-center mb-4">Available Doctors</h1>
    <div class="row">
        @foreach (var doctor in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">                    
                    <img src="/images/default-doctor.png" class="card-img-top doctor-card-img" alt="@doctor.FullName">
                    <div class="card-body">
                        <h5 class="card-title">@doctor.FullName</h5>
                        <p class="card-text">
                            <strong>Specialty:</strong> @doctor.Specialty
                        </p>
                        <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn btn-primary">View Profile</a>
                         <a asp-action="AvailableSlots" asp-controller="Appointments" asp-route-doctorId="@doctor.Id" class="btn btn-primary">
                        Schedule Appointment
                    </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
